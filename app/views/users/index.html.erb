<div class="wrapper">
  <div class="dashboard">
    <div class="header">
      <p><img src="/assets/img/profile.jpg" class="profile-pic"/>
      <span>Hey, Joe. We found some prospects for you. Check them out!</span></p>
    </div>
    <div class="col-sm-3">
      <ul class="nav">
        <li><a href="/users">Dashboard</a></li>
        <li><a href="/users">Scout Prospects</a></li>
        <li><a href="/users">Baseball Cards</a></li>
        <li><a href="/users">Dating Preferences</a></li>
        <li><a href="/users">Edit Profile</a></li>
        <li><a href="/users">Account Settings</a></li>
      </ul>
    </div>
    <div class="col-sm-9">
      <ul>
       <% @users.each do |user| %>

          <li class="baseball-card col-sm-4">
            <div class="card">
              <img src="/assets/img/match1.jpg">
              <h3><%= user.name %>, <%=user.age %></h3>
              <h4><%= user.favorite_team.name %> Fan</h4>
              <%= link_to "View Profile", user_path(user),class: "view-profile" %>
              <a class="request-date">Take me out to a ballgame</a>
            </div>
            <a class="add-to-collection">Add to collection</a>
          </li>

        <% end %>


        <li class="baseball-card col-sm-4">
          <div class="card">
            <img src="/assets/img/match2.jpg">
            <h3>Kondwani Joby , 20</h3>
            <h4>Boston Red Sox Fan</h4>
            <a class="view-profile">View Profile</a>
            <a class="request-date">Take me out to a ballgame</a>
          </div>
          <a class="add-to-collection">Add to collection</a>
        </li>

        <li class="baseball-card col-sm-4">
          <div class="card">
            <img src="/assets/img/match3.jpg">
            <h3>Vencel Aetius, 35</h3>
            <h4>Boston Red Sox Fan</h4>
            <a class="view-profile">View Profile</a>
            <a class="request-date">Take me out to a ballgame</a>
          </div>
          <a class="add-to-collection">Add to collection</a>
        </li>

      </ul>
    </div>
  </div>
</div>
